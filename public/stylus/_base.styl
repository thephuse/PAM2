body
  line-height 1.2em
  background #ecf0f1
  color #303c48
  font-family "freight-sans-pro", "Freight Sans", "Gill Sans", Tahoma, sans-serif
  font-size 18px
  -webkit-font-smoothing antialiased

nav
  ul
    list-style none

blockquote,q
  quotes none

blockquote:before,blockquote:after,q:before,q:after
  content none

a
  margin 0
  padding 0
  font-size 100%
  vertical-align baseline
  background transparent
  text-decoration none

ins
  background-color #ff9
  color #000
  text-decoration none

mark
  background-color #ff9
  color #000
  font-style italic
  font-weight bold

del
  text-decoration line-through

abbr[title],dfn[title]
  border-bottom 1px dotted
  cursor help

table
  border-collapse collapse
  border-spacing 0
  width 100%

hr
  display block
  height 1px
  border 0
  border-top 1px solid #ccc
  margin 1em 0
  padding 0

input,select
  vertical-align middle
