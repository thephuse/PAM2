@import "_reset.styl"
@import "_utils.styl"
@import "_base.styl"

$tagtext
  color a1a8ad
  font-size 12px
  text-transform uppercase

a
  color #303c48
  &:visited
    color #303c48
  &:hover
    color #0498d4
th
  font-weight 400

.container
  max-width 600px
  width 90%
  margin 0 auto

.app-header
  background #303c48
  margin-bottom 2em
  padding 11px 0 10px 0
  text-align center



.filters, .range
  text-align center
  margin 0 0 1em 0



.filters
  li
    background #e1e5e7
    float left
    width 33.3333%
  a
    display block
    padding 10px
  .active a
    background #0498d4
    color #fff



.range
  h1
    display inline-block
    font-size 1em
    font-weight normal
    vertical-align middle
  a
    width 12px
    min-height 13px
    display inline-block
    text-indent -9999px
    cursor pointer
    background-repeat no-repeat
    background-position center
    vertical-align middle
    opacity 0.6

.prev-range
  background-image url("../images/arrow-left.png")
  float left

.next-range
  background-image url("../images/arrow-right.png")
  float right


.module
  margin-bottom 4em

.totals
  @extends $tagtext
  text-align center
  li
    background #f6f8f8
    border 1px solid #ecf0f1
    border-width 0 1px
    width 33.3333%
    padding 20px 10px
    float left
    &:first-child
      border-left 0
    &:last-child
      border-right 0
    span
      text-align center
      display block
      font-size 48px
      line-height 66px
      height 66px
      min-width 30px
      margin-bottom 10px
      position relative
      sup
        font-size 0.7em
        margin 0 -0.7em 0 4px
        position relative
        top -0.05em
      &.nearTarget
        color #d4a104
      &.onTarget
        color #0498d4
      &.offTarget
        color #e26161
      &.pending
         &:before
          background #0498d4
          display inline-block
          content ""
          width 30px
          height 30px
          border-radius 50%
          margin 5px
          position absolute
          top 50%
          left 50%
          margin-top -15px
          margin-left -15px
          -webkit-animation-name fadeToggle
          -webkit-animation-duration 0.6s
          -webkit-animation-timing-function ease
          -webkit-animation-iteration-count infinite
  .stats-percent span
    font-size 60px



.users
  th, td
    vertical-align middle
  th
    @extends $tagtext
    text-align left
    padding-bottom: 10px
    width 20%
  td
    background-color #fff
    border-bottom 2px solid #ecf0f1
    color #a1a8ad
    font-size 24px
    &:first-child
      color #303c48
      font-size 18px
    &.pending
      &:before, &:after
        display: inline-block
        content: ""
        width: 10px
        height: 10px
        border-radius: 50%
        margin: 5px
        -webkit-animation-name: fadeToggle
        -webkit-animation-duration: 0.6s
        -webkit-animation-timing-function: ease
        -webkit-animation-iteration-count: infinite
      &:before
        background: #cd0000
      &:after
        background: #92da40
        -webkit-animation-delay: 0.3s
  .name
    width 47%
  .percent
    width 13%
  .info
    display inline-block
    vertical-align middle
  .timezone
    display block
    font-size 16px
    span
      @extends $tagtext

.status
  background #bfc3c5
  display inline-block
  padding-left 10px
  position relative
  margin 0 20px -2px 0
  vertical-align middle
  img
    display block

.status-true
  background-color #0498d4
